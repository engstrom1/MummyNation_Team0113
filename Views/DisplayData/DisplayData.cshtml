@{
}
@model DisplayDataViewModel

<style>
    body {
      padding-top: 150px;
      background-color: #283845;
    }
</style>
<div style="padding-left:50px;">
    <div style="padding-right:50px;">
        <div class="row"  style="padding-bottom: 75px;">
            <div class="section-title" data-aos="fade-in" data-aos-delay="100">
                <h2 style="color:white;">Burial Site Data Findings</h2>
                <p style="color:white;">Here we have stored burial data collected by BYU researchers. Researchers with permissions can add, edit, and delete each record</p>
            </div>
            <vc:Filter></vc:Filter>
            @if (User.IsInRole("Pharaoh"))
            {
                <form asp-action="Create" asp-controller="Crud">
                    <button type="submit" class="btn btn-primary">Add Entry</button>
                </form>
            }

            <div class="col-9">
                @foreach (var b in Model.burialmain)
                {
                    <partial name="MummyCard" model="b" />
                }
                <div page-model="@Model.PageInfo" page-action="DisplayData" page-classes-enabled="true" page-class="btn" 
                    page-class-normal="btn-outline-light" page-class-selected="btn-mummy" class="btn-group pull-right m-1"></div>
                <br />
                <br />
                <br />
                </div>
            </div>
        </div>
    </div>
